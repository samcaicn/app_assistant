{
  "name": "swot-pc",
  "version": "0.5.0",
  "description": "SWOT Wechat Helper",
  "author": "cs-magic.com",
  "homepage": "https://cs-magic.com",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "electron-vite dev | pino-pretty",
    "build": "npm run typecheck && electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "start": "electron-vite preview | pino-pretty",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web"
  },
  "dependencies": {
    "@cs-magic/swot-backend": "workspace:^",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.8",
    "@babel/preset-env": "^7.24.8",
    "@babel/register": "^7.24.6",
    "@cs-magic/common-frontend": "workspace:^",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/babel__register": "^7",
    "@types/node": "^20.14.8",
    "@types/path-browserify": "^1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/yargs-parser": "^21",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "31.2.0",
    "electron-builder": "^24.13.3",
    "electron-notarize": "^1.2.2",
    "electron-vite": "^2.3.0",
    "eslint": "^8",
    "eslint-plugin-react": "^7.34.3",
    "jotai": "^2.9.1",
    "node-stdlib-browser": "^1.2.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-commonjs": "^0.10.1",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-wasm": "^3.3.0"
  },
  "build": {
    "mac": {
      "notarize": {
        "teamId": "758SN987H4"
      }
    },
    "dmg": {
      "sign": false
    },
    "asarUnpack": [
      "node_modules/node-gyp-build"
    ],
    "extraResources": [
      {
        "from": "../../node_modules/.prisma",
        "to": "./node_modules/.prisma"
      },
      {
        "from": "../../node_modules/@prisma/client",
        "to": "./node_modules/@prisma/client"
      }
    ]
  }
}
